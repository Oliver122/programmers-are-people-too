{
  "name": "programmersarepeopletoo",
  "displayName": "Programmers Are People Too",
  "description": "Celebrate your coding wins! Get positive reinforcement when you fix errors and improve code quality.",
  "version": "0.0.3",
  "publisher": "dan-42",
  "author": {
    "name": "Programmers Are People Too Team"
  },
  "contributors": [
    {
      "name": "Oliver",
      "url": "https://github.com/Oliver122"
    },
    {
      "name": "Dan",
      "url": "https://github.com/dan-42"
    },
    {
      "name": "Andrey Dodonov",
      "url": "https://github.com/AndreyDodonov-EH"
    },
    {
      "name": "Kleeblitz",
      "url": "https://github.com/Kleeblitz"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/Oliver122/programmers-are-people-too",
  "repository": {
    "type": "git",
    "url": "https://github.com/Oliver122/programmers-are-people-too.git"
  },
  "bugs": {
    "url": "https://github.com/Oliver122/programmers-are-people-too/issues"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Education",
    "Visualization"
  ],
  "keywords": [
    "positive reinforcement",
    "motivation",
    "celebration",
    "diagnostics",
    "developer experience",
    "feedback",
    "programming",
    "wellness",
    "productivity"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#4CAF50",
    "theme": "light"
  },
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "programmersarepeopletoo.cheermeup",
        "title": "Cheer Me Up",
        "category": "Programmers Are People Too"
      },
      {
        "command": "programmersarepeopletoo.showstats",
        "title": "Show Statistics (Debug)",
        "category": "Programmers Are People Too"
      }
    ],
    "configuration":{
      "type":"object",
      "title": "Programmers are people too",
      "properties": {
        "ProgrammersArePeopleToo.enable":{
          "type": "boolean",
          "default": true,
          "description": "Extension acivation or deactivation"
        },
        "ProgrammersArePeopleToo.underline":{
          "type": "boolean",
          "default": true,
          "description": "Green underline under the code"
        },
        "ProgrammersArePeopleToo.animations":{
          "type": "boolean",
          "default": true,
          "description": "Animations in the line of code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run copy-assets && npm run compile",
    "copy-assets": "node scripts/copy-assets.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}


